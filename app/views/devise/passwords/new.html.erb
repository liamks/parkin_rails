<div id="login_box" class="modal">
<div class="modal-header"><h2>Forgot password?</h2></div>
<div class="modal-body form-stacked">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="clearfix"><%= f.label :email %>
  <div class="input"><%= f.email_field :email %></div></div>

  <div><%= f.submit "Send me reset password instructions", :class => "btn primary" %></div>
<% end %>
</div>
<%= render :partial => "devise/shared/links" %>
</div>