%h1 Edit Services
=form_for(@service, :url => service_update_url, :method => 'post', :html => { :class => 'form-stacked'}) do |f|
  %div.clearfix
    %div.input
      =f.text_area :content, :rows => 14, :class=>'span8' 

  %div.actions
    =f.submit :class => 'btn primary', :value => 'Save Changes'
    =link_to 'Back', pages_path,:class => 'btn'
    

:javascript
  $(function() {
    $('textarea').tinymce({
        mode : "textareas",
        theme : "advanced",
        plugins : "preview", 
                
        // Theme options - button# indicated the row# only
        theme_advanced_buttons1 : "bold,italic,underline,|,fontsizeselect,|,bullist,numlist,|,outdent,indent,|,link,unlink,|,code,preview,|,removeformat",
        theme_advanced_buttons2 : "",  
        theme_advanced_buttons3: ''  ,
        theme_advanced_toolbar_location : "top",
        theme_advanced_toolbar_align : "left",
        theme_advanced_statusbar_location : "bottom"
       
    });

    $("#news_item_published_date").datepicker({
      dateFormat: 'yy-mm-dd'
    });
  });
